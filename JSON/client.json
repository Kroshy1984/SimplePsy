{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Клиент",
  "additionalProperties": false,
  "properties": {
    "clientType": {
      "type": "string",
      "description": "Тип клиента",
      "enum": [
            "Взрослый",
            "Ребенок",
            "Пара или семья"
          ]
    },
    "name": {
      "type": "string",
      "description": "Имя",
      "maxLength": 255,
      "pattern": "^[A-Z]+*[a-z]$"
    },
    "surname": {
      "type": "string",
      "description": "Фамилия",
      "maxLength": 255,
      "pattern": "^[A-Z]+*[a-z]$"
    },
    "middleName": {
      "type": "string",
      "description": "Отчество",
      "maxLength": 255,
      "pattern": "^[A-Z]+*[a-z]$"
    },
    "contact": {
      "$ref": "#/definitions/contact_type"
    },
    "listOfDocs": {
      "$ref": "#/definitions/docs_type"
    }
  },
  "required": [
    "name",
    "surname",
    "address",
    "listOfDocs"
  ],
  "definitions": {
    "contact_type": {
      "type": "object",
      "description": "Адрес клиента",
      "additionalProperties": false,
      "properties": {
        "phone": {
          "type": "string",
          "description": "Номер телефона",
          "maxLength": 12,
          "pattern": "^((8|\+7)[\- ]?)?(\(?\d{3}\)?[\- ]?)?[\d\- ]{7,10}$"
        },
       "email": {
          "type": "string",
          "description": "электронная почта",
          "maxLength": 320,
          "pattern": "^[-a-z0-9!#$%&'*+/=?^_`{|}~]+(\.[-a-z0-9!#$%&'*+/=?^_`{|}~]+)*@([a-z0-9]([-a-z0-9]{0,61}[a-z0-9])?\.)*(aero|arpa|asia|biz|cat|com|coop|edu|gov|info|int|jobs|mil|mobi|museum|name|net|org|pro|tel|travel|[a-z][a-z])$"
        }
      }
    },
    "docs_type": {
      "type": "array",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Название",
            "enum": [
              "Паспорт",
              "Водительские права"
            ]
          },
          "number": {
            "type": "string",
            "description": "Номер"
          },
          "serial": {
            "type": "string",
            "description": "Серия"
          }
        },
        "required": [
          "name",
          "number",
          "serial"
        ]
      }
    }
  }
}
