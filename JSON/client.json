{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Клиент",
  "additionalProperties": false,
  "properties": {
    "clientType": {
      "type": "string",
      "description": "Тип клиента",
      "enum": [
        "Взрослый",
        "Ребенок",
        "Пара или семья"
      ]
    },
    "name": {
      "type": "string",
      "description": "Имя",
      "maxLength": 255,
      "pattern": "^[А-я]+*[а-я]$"
    },
    "surname": {
      "type": "string",
      "description": "Фамилия",
      "maxLength": 255,
      "pattern": "^[А-Я]+*[а-я]$"
    },
    "middleName": {
      "type": "string",
      "description": "Отчество",
      "maxLength": 255,
      "pattern": "^[А-Я]+*[а-я]$"
    },
    "contact": {
      "$ref": "#/definitions/contact_type"
    },
    "source": {
      "type": "string",
      "enum": [
        "Viber",
        "vk",
        "WhatsApp",
        "Telegramm",
        "facebook"
      ],
      "description": "Источник обращения через который клиент обратился к психологу (например, мессенджер, социальная сеть, агрегатор)",
      "maxLength": 255
    },
    "dateOfFirstContact": {
      "type": "string",
      "description": "Дата первого обращения",
      "format": "date"
    },
    "preferMeetingFormat": {
      "type": "string",
      "description": "Предпочитаемый формат встречи",
      "enum": [
        "online",
        "offline"
      ]
    },
    "interactionPlatform": {
      "type": "string",
      "description": "Для онлайн выбрать/указать площадку взаимодействия",
      "maxLength": 255
    },
    "meetingAddres": {
      "type": "string",
      "description": "Для оффлайн выбрать адрес проведения встречи (интеграция с картами)",
      "maxLength": 255
    },
    "primeryInvoice": {
      "type": "string",
      "description": "Первичный/изначальный запрос клиента на терапию (поле для заполнения)",
      "maxLength": 512
    },
    "preferTime": {
      "$ref": "#/definitions/preferTime_type"
    }
  },
  "required": [
    "name",
    "surname",
    "address",
    "listOfDocs"
  ],
  "definitions": {
    "contact_type": {
      "type": "object",
      "description": "Адрес клиента",
      "additionalProperties": false,
      "properties": {
        "phone": {
          "type": "string",
          "description": "Номер телефона",
          "maxLength": 12
        },
        "email_type": {
          "type": "string",
          "description": "электронная почта",
          "maxLength": 320
        }
      }
    },
    "docs_type": {
      "type": "array",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Название",
            "enum": [
              "Паспорт",
              "Водительские права"
            ]
          },
          "number": {
            "type": "string",
            "description": "Номер"
          },
          "serial": {
            "type": "string",
            "description": "Серия"
          }
        },
        "required": [
          "name",
          "number",
          "serial"
        ]
      }
    },
    "preferTime_type": {
      "title": "Generated schema for Root",
      "type": "object",
      "properties": {
        "preferTime": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dayOfWeek": {
                "type": "object",
                "properties": {
                  "day": {
                    "type": "string",
                    "enum": [
                      "пн",
                      "вт",
                      "cp",
                      "чт",
                      "пт",
                      "сб",
                      "вс"
                    ]
                  },
                  "startTime": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                  },
                  "finishDate": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                  }
                },
                "required": [
                  "day",
                  "startTime",
                  "finishDate"
                ]
              }
            },
            "required": [
              "dayOfWeek"
            ]
          }
        }
      },
      "required": [
        "preferTime"
      ]
    }
  }
}
