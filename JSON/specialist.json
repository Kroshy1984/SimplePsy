{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Психолог",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "идентификатор психолог"
    },
    "name": {
      "type": "string",
      "description": "Имя",
      "maxLength": 255,
      "pattern": "^[А-я]+*[а-я]$"
    },
    "surname": {
      "type": "string",
      "description": "Фамилия",
      "maxLength": 255,
      "pattern": "^[А-Я]+*[а-я]$"
    },
    "middleName": {
      "type": "string",
      "description": "Отчество",
      "maxLength": 255,
      "pattern": "^[А-Я]+*[а-я]$"
    },
    "customers": {
      "$ref": "#/definitions/calendar_type"
    },
    "notification": {
      "$ref": "#/definitions/notification_type"
    }
  },
  "required": [
    "name",
    "surname",
    "id",
    "customers"
  ],
  "definitions": {
    "calendar_type": {
      "type": "array",
      "description": "список встреч",
      "additionalProperties": false,
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "meeting": {
            "$ref": "#/definitions/meeting_type"
          }
        },
        "required": [
          "customer"
        ]
      }
    },
    "notification_type": {
      "type": "string"
    },
    "meeting_type": {
      "type": "object",
      "description": "Календарь",
      "additionalProperties": false,
      "properties": {
        "clients": {
          "$ref": "#/definitions/clients_type"
        },
        "typeOfClients": {
          "type": "string",
          "description": "Тип клиента на встрече",
          "enum": [
            "Взрослый",
            "Ребенок",
            "Пара"
          ]
        },
        "date": {
          "type": "string",
          "description": "Дата встречи",
          "format": "date"
        },
        "time": {
          "type": "string",
          "description": "Время встречи",
          "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
        }
      },
      "required": [
        "clients",
        "typeOfClients"
      ]
    },
    "clients_type": {
      "type": "array",
      "description": "список клиентов",
      "additionalProperties": false,
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "client": {
            "$ref": "#/definitions/client_type"
          }
        },
        "required": [
          "customer"
        ]
      }
    },
    "client_type": {
      "type": "object",
      "description": "Клиент",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "идентификатор клиента"
        },
        "status": {
          "type": "string",
          "description": "статус",
          "enum": [
            "проспект",
            "клиент"
          ]
        },
        "clientType": {
          "type": "string",
          "description": "Тип клиента",
          "enum": [
            "Взрослый",
            "Ребенок",
            "Пара или семья"
          ]
        },
        "name": {
          "type": "string",
          "description": "Имя",
          "maxLength": 255,
          "pattern": "^[А-я]+*[а-я]$"
        },
        "surname": {
          "type": "string",
          "description": "Фамилия",
          "maxLength": 255,
          "pattern": "^[А-Я]+*[а-я]$"
        },
        "middleName": {
          "type": "string",
          "description": "Отчество",
          "maxLength": 255,
          "pattern": "^[А-Я]+*[а-я]$"
        },
        "contact": {
          "$ref": "#/definitions/contact_type"
        },
        "source": {
          "type": "string",
          "enum": [
            "Viber",
            "vk",
            "WhatsApp",
            "Telegramm",
            "facebook"
          ],
          "description": "Источник обращения через который клиент обратился к психологу (например, мессенджер, социальная сеть, агрегатор)",
          "maxLength": 255
        },
        "dateOfFirstContact": {
          "type": "string",
          "description": "Дата первого обращения",
          "format": "date"
        },
        "preferMeetingFormat": {
          "type": "string",
          "description": "Предпочитаемый формат встречи",
          "enum": [
            "online",
            "offline"
          ]
        },
        "interactionPlatform": {
          "type": "string",
          "description": "Для онлайн выбрать/указать площадку взаимодействия",
          "maxLength": 255
        },
        "meetingAddres": {
          "type": "string",
          "description": "Для оффлайн выбрать адрес проведения встречи (интеграция с картами)",
          "maxLength": 255
        },
        "primeryInvoice": {
          "type": "string",
          "description": "Первичный/изначальный запрос клиента на терапию (поле для заполнения)",
          "maxLength": 512
        },
        "preferTime": {
          "$ref": "#/definitions/preferTime_type"
        },
        "finantialConditions": {
          "type": "string",
          "description": "финансовые условия",
          "maxLength": 512
        },
        "gender": {
          "type": "string",
          "description": "пол",
          "enum": [
            "male",
            "female"
          ]
        },
        "birthDay": {
          "type": "string",
          "description": "Дата рождения",
          "format": "date"
        },
        "recomendations": {
          "type": "string",
          "description": "Коллегиальные рекомендации",
          "maxLength": 255
        },
        "maritalStatus": {
          "type": "string",
          "description": "семейное положение",
          "enum": [
            "холост/ не замужем",
            "женат/замужем"
          ]
        },
        "calendar": {
          "$ref": "#/definitions/calendar_type"
        }
      },
      "required": [
        "name",
        "surname",
        "address",
        "listOfDocs"
      ]
    },
    "contact_type": {
      "type": "object",
      "description": "Контакт клиента",
      "additionalProperties": false,
      "properties": {
        "phone": {
          "type": "string",
          "description": "Номер телефона",
          "maxLength": 12
        },
        "email": {
          "type": "string",
          "description": "электронная почта",
          "maxLength": 320
        },
        "tg": {
          "type": "string",
          "description": "Телеграмм",
          "maxLength": 320
        }
      }
    },
    "docs_type": {
      "type": "array",
      "minItems": 1,
      "maxItems": 255,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Название",
            "enum": [
              "Паспорт",
              "Водительские права"
            ]
          },
          "number": {
            "type": "string",
            "description": "Номер"
          },
          "serial": {
            "type": "string",
            "description": "Серия"
          }
        },
        "required": [
          "name",
          "number",
          "serial"
        ]
      }
    },
    "preferTime_type": {
      "title": "Generated schema for Root",
      "type": "object",
      "properties": {
        "preferTime": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dayOfWeek": {
                "type": "object",
                "properties": {
                  "day": {
                    "type": "string",
                    "enum": [
                      "пн",
                      "вт",
                      "cp",
                      "чт",
                      "пт",
                      "сб",
                      "вс"
                    ]
                  },
                  "startTime": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                  },
                  "finishDate": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                  }
                },
                "required": [
                  "day",
                  "startTime",
                  "finishDate"
                ]
              }
            },
            "required": [
              "dayOfWeek"
            ]
          }
        }
      },
      "required": [
        "preferTime"
      ]
    },
    "customer_type": {
      "type": "object",
      "description": "Заказчик",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "идентификатор заказчика",
          "pattern": "[0-9]{3}",
          "minLength": 3
        },
        "status": {
          "type": "string",
          "description": "статус",
          "enum": [
            "лид",
            "клиент"
          ]
        },
        "name": {
          "type": "string",
          "description": "Имя",
          "maxLength": 255
        },
        "contact": {
          "$ref": "#/definitions/contact_type"
        },
        "dateOfFirstContact": {
          "type": "string",
          "description": "Дата первого контакта",
          "maxLength": 10,
          "pattern": "^[0-9]{2}/[0-9]{2}/[0-9]{4}$"
        },
        "problems": {
          "$ref": "#/definitions/problems_type"
        }
      },
      "required": [
        "name",
        "id",
        "status",
        "contact",
        "problems"
      ]
    },
    "problems_type": {
      "type": "array",
      "description": "список проблем заказчика",
      "additionalProperties": false,
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "problem": {
            "$ref": "#/definitions/problem_type"
          }
        },
        "required": [
          "problem"
        ]
      }
    },
    "problem_type": {
      "type": "object",
      "description": "Проблема",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "идентификатор проблемы",
          "pattern": "[0-9]{3}",
          "minLength": 3
        },
        "status": {
          "type": "string",
          "description": "статус",
          "enum": [
            "решена",
            "не решена"
          ]
        },
        "dateOfFirstContact": {
          "type": "string",
          "description": "Дата первого контакта",
          "maxLength": 10,
          "pattern": "^[0-9]{2}/[0-9]{2}/[0-9]{4}$"
        },
        "clients": {
          "$ref": "#/definitions/clients_type"
        },
        "descriptionOfProblem": {
          "type": "string",
          "description": "Описание проблемы"
        },
        "scoring": {
          "$ref": "#/definitions/scoring_type"
        }
      },
      "required": [
        "id",
        "status",
        "scoring"
      ]
    },
    "scoring_type": {
      "type": "array",
      "description": "Ответы на анкету",
      "additionalProperties": false,
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "answer": {
            "type": "object",
            "description": "Ответ на вопрос",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "description": "идентификатор ответа",
                "pattern": "[0-9]{3}",
                "minLength": 3
              },
              "question": {
                "type": "string",
                "description": "Вопрос"
              },
              "answer": {
                "type": "string",
                "description": "ответ"
              }
            },
            "required": [
              "id",
              "question",
              "answer"
            ]
          }
        },
        "required": [
          "customer"
        ]
      }
    }
  }
}
